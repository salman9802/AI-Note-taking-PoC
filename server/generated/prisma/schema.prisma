generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String

  createdAt   DateTime     @default(now())
  UserSession UserSession?
  userNotes   UserNote[]

  @@map("users")
}

model UserSession {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId

  createdAt DateTime @default(now())
  expiresAt DateTime

  @@map("user_sessions")
}

model UserNote {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  title   String
  content String

  createdAt DateTime      @default(now())
  noteTags  UserNoteTag[]
  userId    String        @db.ObjectId
  user      User          @relation(fields: [userId], references: [id])

  @@map("user_notes")
}

model UserNoteTag {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name String

  createdAt DateTime @default(now())
  noteId    String   @db.ObjectId
  userNote  UserNote @relation(fields: [noteId], references: [id])
}
